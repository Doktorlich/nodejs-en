section.pagination
	if (currentPage != 1 && previousPage != 1)
		a(href="?page=1") 1 F

	if (previousPage)
		a(href=("?page=" + previousPage)) #{previousPage} P

	a.active(href=("?page=" + currentPage)) #{currentPage} C

	if (hasNextPage)
		a(href=("?page=" + nextPage)) #{nextPage} N

	if (lastPage != currentPage && nextPage != lastPage)
		a(href=("?page=" + lastPage)) #{lastPage} L