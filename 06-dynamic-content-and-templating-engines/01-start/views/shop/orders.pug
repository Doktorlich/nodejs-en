extends ../includes/main-layout

block styles
	link(rel="stylesheet", href="/css/main.css")
block title
	title #{docTitle}
block content
	if (orders === 0)
		h1 Nothing there!
	else
		ul
			each order in orders
				li
					h2 #{order._id}
					ul
						each product in order.items
							li
								p #{product.title} ------------------------- [ #{product.quantity} ]

