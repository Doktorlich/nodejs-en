extends ../includes/main-layout

block styles
	link(rel="stylesheet", href="/css/main.css")
	link(rel="stylesheet", href="/css/forms.css")
	link(rel="stylesheet", href="/css/auth.css")
block title
	title #{docTitle}
block content
	form.login-form(action="/signup", method="POST", novalidate)
		if validationErrors.length > 0
			.error-validation #{validationErrors[0].msg}
		.form-control
			label(for="email") E-Mail
			input(type="email", name="email", id="email", value=(oldInput ? oldInput.email : ""))
		.form-control
			label(for="password") Password
			input(type="password", name="password", id="password")
		.form-control
			label(for="confirmPassword") Confirm Password
			input(type="password", name="confirmPassword", id="confirmPassword" )
		input(type="hidden", name="_csrf", value=csrfToken)
		button.btn(type="submit") Signup